<GradeJogoDaVelha>:
    cols: 3 # colunas
            
<BotaoEntrada>:
    font_size: self.height



<PainelJogoDaVelha>:
    orientation: 'vertical' 
    Label:
        size_hint_y: None
        height: sp(40)
        text: "Meu Jogo da Velha"

    AnchorLayout:
        GradeJogoDaVelha:
            id: board
            size: min(self.parent.size), min(self.parent.size)
            size_hint: None, None
        
    Label:
        size_hint_y: None
        height: sp(40)
        text: 
            'Jogador {} joga agora'.format({1: 'O', -1: 'X'}[board.jogadorAtual])
                
    Button:
        size_hint_y: None
        height: sp(40)
        text: 'Reinicia'
        on_press: board.reset()